<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>New Year Wishes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
      <h1>Újévi Kívánságok</h1>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Kívánó neve</th>
            <th>Tartalom</th>
            <th>Időpont</th>
          </tr>
        </thead>
        <tbody>
          <% wishes.forEach((wish, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= wish.name || 'Névtelen' %></td>
            <td><%= wish.content %></td>
            <td><%= new Date(wish.createdAt).toLocaleString('hu-HU') %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
   <footer>
    <img src="https://upload.wikimedia.org/wikipedia/commons/6/6d/Rubber_duck.jpg" 
         alt="Rubber Duck" 
         class="rubber-duck">
    </footer>
  
  </body>
  
</html>
